<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/pink"
    tools:context=".AddEventActivity">

    <TextView
        android:id="@+id/addEventBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        android:text="Add Event"
        android:textSize="30sp"
        android:fontFamily="@font/ants_valley"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/addEventDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/addEventBanner"
        android:layout_marginTop="50dp"
        android:hint="Pick event date"
        android:textSize="22sp"
        android:padding="6dp"
        android:fontFamily="@font/ants_valley"
        />

    <EditText
        android:id="@+id/addEventName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/addEventDate"
        android:layout_marginTop="50dp"
        android:hint="@string/eventname"
        android:textSize="22sp"
        android:fontFamily="@font/ants_valley"
        android:padding="6dp"
        android:autofillHints="Enter name" />

    <Button
        android:id="@+id/btnAddEvent"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/addEventName"
        android:layout_marginTop="30dp"
        android:text="Add Event"/>

</androidx.constraintlayout.widget.ConstraintLayout>