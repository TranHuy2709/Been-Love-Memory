<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/pink"
    tools:context=".AddMemoryActivity">

    <TextView
        android:id="@+id/txtAddMemory"
        android:textSize="30sp"
        android:fontFamily="@font/ants_valley"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"/>

    <TextView
        android:id="@+id/txtPickDate"
        android:hint="@string/pickdate"
        android:textSize="22sp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/txtAddMemory"
        android:layout_marginTop="40dp"/>

    <EditText
        android:id="@+id/edtMemoryName"
        android:hint="@string/memoryname"
        android:textSize="22sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/txtPickDate"
        android:layout_marginTop="40dp"/>

    <ImageView
        android:id="@+id/imgNewMemory"
        android:src="@drawable/add_photo_icon"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@id/edtMemoryName"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btnAddMemory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/imgNewMemory"
        android:layout_marginTop="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>